<div class="homepage">

  <div class="inner-homepage">
    <section class="left-column">
      <div class="header">DISCOVER <i class="more-info" data-toggle="tooltip" data-placement="top">i</i></div>
      <select class="homepage-genre-switcher">
        <option default=true>Loading Categories...</option>
      </select>
      <article class="discover" style="position: relative; top: -15px; margin: 0 auto;width: 330px;">
        Loading podcasts you will like...
      </article>
      <article class="add-to-library hidden">
        <div class="podcast-title"></div>
        <div class="podcast-bio"></div>
        <div style="margin-top: 5px;">
          <input type="checkbox" name="to-listen" id="to-listen" />
          <label for="to-listen" id="to-listen">
            Add to To Listen...
          </label>
          <br />
          <input type="checkbox" name="listening" id="listening" />
          <label for="listening" id="listening">
            Add to Listening...
          </label>
          <br />
          <input type="checkbox" name="listened" id="listened" />
          <label for="listened" id="listened">
            Add to Listened...
          </label>
        </div>
      </article>
    </section>

    <% if FeatureFlag.activity %>
      <section class="center-column column">
        <article class="updates">
          <div class="header">REVIEWS <i class="js-post-an-update">post review</i></div>
          <div class="hidden" id="hidden-poster-for-updates">
            <div class="post-an-update" style="position: relative">
              <textarea name="" id=""></textarea>
              <input type="submit" name="" id="update-post" value="Post" />
              <div class="typeahead-dropdown hidden">
              </div>
            </div>
          </div>
          <div class="clearfix"></div>
          <div class="updates-body">
            Loading reviews...
          </div>
        </article>
      </section>
    <% end %>

    <section class="right-column">
      <section class="my-lists">
        <div class="header">LIBRARY <i class="more-info">i</i></div>
        <h3 style="margin-top:-5px;">To Listen</h3>
        <article class="to-listen">
          Loading To Listen list...
        </article>
        <h3>Listening</h3>
        <article class="listening">
          Loading listening history...
        </article>
        <h3>Listened</h3>
        <article class="listened">
          Loading listened...
        </article>
        <h3>Your Subscriptions</h3>
        <article class="">
          Loading subscriptions...
        </article>
      </section>
    </section>

  </div><!-- /inner-homepage -->

</div><!-- /homepage -->
